<h6><%= "Редагування коригування від #{@en_adjustment.created_at.strftime('%d.%m.%Y')}" %></h6>
<%= form_for [@consumer, @en_adjustment] do |f| %>
	<fieldset disabled>
		<div class="form-row">
				<div class="form-group col-md-2">
					<%= f.label :month, "Місяць" %><br>
					<%= f.select :month, UA_MONTHS_SINGLE.invert, {}, { class: "form-control" } %>
				</div>
				<div class="form-group col-md-2">
					<%= f.label :value, "Значення" %><br>
					<%= f.number_field :value, class: "form-control" %>
				</div>
		</div>
	</fieldset>
	<div class="form-row">
		<div class="form-group col-md-2">
			<%= f.label :state, "Статус" %><br>
			<%= f.select :state, [["відправлено", 0], 
								  ["прийнято", 1],
								  ["виконано", 2],
								  ["не виконано", 3]],
								  {}, { class: "form-control" } %>
		</div>
		<div class="form-group col-md-10">
			<%= f.label :comment, "Коментар" %>
			<%= f.text_area :comment, class: "form-control" %>
		</div>
	</div>
	<div class="form-row">
		<div class="col-md-3">
			<%= f.button type: 'submit', name: 'cab', value: params[:cab], class: "btn btn-outline-dark btn-block" do %>
				<i class="fas fa-save"></i> Зберегти
			<% end %>
		</div>
		<div class="col-md-3">
			<%= link_to :back, class: "btn btn-outline-dark btn-block" do %>
				<i class="fas fa-undo-alt"></i> Повернутись
			<% end %>
		</div>
	</div>
<% end %>