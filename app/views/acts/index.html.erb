<%= render './consumers/card', consumer: @consumer, manager: @manager, client: @client, style: 'energy' %>
<br>
<%= render './entab', active: 8 %>
<br>
<% if @out_documents.size == 0 %>
	<h6 class='text-center'>Документів не знайдено</h6>
<% else %>
	<table class="table table-striped table-sm">
		<thead>
			<th class="text-center">Дата</th>
			<th class="text-center">Документ</th>
			<th class="text-center">Номер</th>
			<th class="text-center">Статус</th>
		</thead>
		<tbody>
			<% @out_documents.first(100).each do |document| %>
				<tr>
					<td class='text-center'><%= link_to document['date_created'].to_date, consumer_act_path(@consumer, {id: document['id']}) %></td>
					<td class='text-left'><%= link_to document['title']||='', consumer_act_path(@consumer, {id: document['id']}) %></td>
					<td class='text-center'><%= link_to document['number']||='', consumer_act_path(@consumer, {id: document['id']}) %></td>
					<td class='text-center'><%= Vchasno::V2::Client::DOCUMENT_STATUS[document['status']] %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
