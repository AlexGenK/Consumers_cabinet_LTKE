<h5>Редагування енергорозподільчої компанії <%= @d_company.name %></h5>
<br>
<%= form_for @d_company do |f| %>
	<div class="form-row">
		<div class="form-group col-md-10">
		<%= f.label :name,"Найменування" %>
		<%= f.text_field :name, class: "form-control" %>
		<div class="invalid-feedback">вже існує</div>
		</div>
		<div class="form-group col-md-2">
		<%= f.label :operational, "функціонує" %>
		<%= f.check_box :operational, class: "form-control" %>
		</div>
	</div>

	<div class="form-row">
		<div class="col-md-3">
			<%= f.button type: 'submit', class: "btn btn-outline-dark btn-block" do %>
				<i class="fas fa-save"></i> Зберегти
			<% end %>
		</div>
		<div class="col-md-3">
			<%= link_to :back, class: "btn btn-outline-secondary btn-block" do %>
				<i class="fas fa-undo-alt"></i> Повернутись
			<% end %>
		</div>
	</div>
<% end %>
