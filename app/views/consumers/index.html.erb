<h3>Лист споживачів</h3>
<%= link_to new_consumer_path, class: "btn btn-outline-dark" do %>
	<i class="fas fa-plus"></i> Новий споживач
<% end %>
<br>
<br>
<table class="table table-striped table-sm">
	<thead>
		<tr>
			<th>#</th>
			<th>Найменування</th>
			<th class="text-center">Е/енергія</th>
			<th class="text-center">Газ</th>
			<th class="text-center">Надійшов запит</th>
			<th class="text-right">ЕДРПОУ</th>
			<th class="text-right">Код 1С</th>
			<th class="text-right"></th>
		</tr>
	</thead>
	<tbody>
		<% n = 0 %>
		<% @consumers.each do |consumer| %>
		<tr>
			<td><%= n += 1 %></td>
			<td><%= consumer.name %></td>
			<td class="text-center">
				<% if consumer.energy_consumer %>
					<%= link_to consumer_en_payments_path(consumer), class: "btn btn-outline-primary btn-sm" do %>
						&nbsp; &nbsp; <i class="fas fa-plug"></i> &nbsp; &nbsp;
					<% end %>
				<% end %>
			</td>
			<td class="text-center">
				<% if consumer.gas_consumer %>
					<%= link_to consumer_gas_payments_path(consumer), class: "btn btn-outline-primary btn-sm" do %>
						&nbsp; &nbsp; <i class="fas fa-burn"></i> &nbsp; &nbsp; 
					<% end %>
				<% end %>
			</td>
			<td class="text-center">
				<% if consumer.has_new_message? %>
					<i class="fas fa-check"></i>
				<% end %>
			</td>
			<td class="text-right"><%= consumer.edrpou  %></td>
			<td class="text-right"><%= consumer.onec_id %></td>
			<td class='text-right'>
					<div class="btn-group">
					<%= link_to edit_consumer_path(consumer), 
						class: "btn btn-outline-dark btn-sm" do %>
						<i class="fas fa-edit test-edit-payment"></i>
					<% end %>
					<%= link_to consumer, method: :delete, 
						class: "btn btn-outline-danger btn-sm",
						data: {confirm: "Ви впевнені що хочете видалити споживача?"} do %>
						&nbsp<i class="fas fa-times test-delete-payment"></i>
					<% end %>
					</div>
				</td>
		</tr>
		<% end %>
	</tbody>
</table>