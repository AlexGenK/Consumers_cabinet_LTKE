<h5>Реквізити постачальника</h5>
<%= form_for [:admin, @receiver] do |f| %>
	<div class="card">
		<h6 class="card-header">Загальні</h6>
  		<div class="card-body">
			<div class='form-group row'>
				<%= f.label :name, "Найменування", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :name, class: "form-control" %>
					<div class="invalid-feedback">Не може бути порожнім</div>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :adddress, "Адреса", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :address, class: "form-control" %>
					<div class="invalid-feedback">Не може бути порожнім</div>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :edrpou, "ЄДРПОУ", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.number_field :edrpou, class: "form-control" %>
					<div class="invalid-feedback">Не може бути порожнім. Містить 8 цифр</div>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :ipn, "ІПН", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.number_field :ipn, class: "form-control" %>
					<div class="invalid-feedback">Не може бути порожнім. Містить 12 цифр</div>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :account, "Рахунок", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :account, class: "form-control" %>
					<div class="invalid-feedback">Не може бути порожнім. Повинен бути в форматі IBAN</div>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :bank, "Банк", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :bank, class: "form-control" %>
					<div class="invalid-feedback">Не може бути порожнім</div>
				</div>
			</div>
		</div>
	</div>
	</br>

	<div class="card">
		<h6 class="card-header">Бухгалтерія</h6>
  		<div class="card-body">
  			<div class='form-group row'>
				<%= f.label :buh_name, "Контактна особа", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :buh_name, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :buh_phone, "Телефон", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :buh_phone, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :buh_mail, "E-mail", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :buh_mail, class: "form-control" %>
				</div>
			</div>
  		</div>
  	</div>
	</br>

	<div class="card">
		<h6 class="card-header">Договірний відділ</h6>
  		<div class="card-body">
  			<div class='form-group row'>
				<%= f.label :dog_name, "Контактна особа", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :dog_name, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :dog_phone, "Телефон", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :dog_phone, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :dog_mail, "E-mail", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :dog_mail, class: "form-control" %>
				</div>
			</div>
  		</div>
  	</div>
	</br>

	<div class="card">
		<h6 class="card-header">Технічний відділ</h6>
  		<div class="card-body">
  			<div class='form-group row'>
				<%= f.label :teh_name, "Контактна особа", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :teh_name, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :teh_phone, "Телефон", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :teh_phone, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :teh_mail, "E-mail", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :teh_mail, class: "form-control" %>
				</div>
			</div>
  		</div>
  	</div>
	</br>

	<div class="card">
		<h6 class="card-header">Комерційний відділ</h6>
  		<div class="card-body">
  			<div class='form-group row'>
				<%= f.label :com_name, "Контактна особа", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :com_name, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :com_phone, "Телефон", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :com_phone, class: "form-control" %>
				</div>
			</div>
			<div class='form-group row'>
				<%= f.label :com_mail, "E-mail", class: "col-md-2 col-lg-2 col-form-label" %>
				<div class='col-sm-10'>
					<%= f.text_field :com_mail, class: "form-control" %>
				</div>
			</div>
  		</div>
  	</div>
	</br>

	<div class='row'>
		<div class='col-sm-3 mb-2'>
		<%= f.button type: 'submit', class: "btn btn-outline-dark btn-block" do %>
			<i class="fas fa-save"></i> Зберегти
		<% end %>
		</div>
	</div>
	<div class='row'>
		<div class='col-sm-3'>
		<%= link_to consumers_path, class: "btn btn-outline-dark btn-block" do %>
			<i class="fas fa-undo-alt"></i> Повернутись
		<% end %>
		</div>
	</div>
<% end %>	