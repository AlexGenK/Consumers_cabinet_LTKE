<%= render './consumers/card', consumer: @consumer %>
<br>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="<%= consumer_en_payments_path(@consumer) %>">Поточний місяць</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Попередні періоди</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Заявка</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="#">Запити</a>
  </li>
</ul>
<br>
<%= form_for [@consumer, @message] do |f| %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :text, "Введить запит:", class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :text, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
      <%= f.button type: 'submit', class: "btn btn-outline-dark" do %>
        <i class="fas fa-share-square"></i> Надіслати
      <% end %>
    </div>
  </div>
<% end %>
<h6>Історія запитів</h6>
<table class="table table-striped table-sm">
  <thead>
    <th class="text-center">Дата</th>
    <th>Запит</th>
    <th>Статус</th>
    <th>Коментар</th>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td class="text-center"><%= message.created_at %></td>
        <td><%= message.text %></td>
        <td><%= message.state %></td>
        <td><%= message.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
