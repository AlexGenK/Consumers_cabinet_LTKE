<%= render './consumers/card', consumer: @consumer %>
<br>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="<%= consumer_en_payments_path(@consumer) %>">Поточний місяць</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Попередні періоди</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Заявка</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="#">Запити</a>
  </li>
</ul>
<br>
<%= form_for [@consumer, @message] do |f| %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :text, "Введить запит:", class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :text, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
      <%= f.button type: 'submit', class: "btn btn-outline-dark" do %>
        <i class="fas fa-share-square"></i> Надіслати
      <% end %>
    </div>
  </div>
<% end %>
<h6>Історія запитів</h6>
<div class="row block-v-scroll">
  <div class="col-md">
    <table class="table table-striped table-sm">
      <thead>
        <th class="text-center">Дата</th>
        <th>Запит</th>
        <th>Статус</th>
        <th>Коментар</th>
        <th></th>
      </thead>
      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td class="text-center"><%= message.created_at.strftime('%d.%m.%Y') %></td>
            <td><%= truncate(message.text, length: 52) %></td>
            <td><%= message.state %></td>
            <td><%= message.comment %></td>
            <td class='text-right'>
              <div class="btn-group">
              <%= link_to edit_consumer_message_path(@consumer, message), 
                class: "btn btn-outline-dark btn-sm" do %>
                <i class="fas fa-edit test-edit-message"></i>
              <% end %>
              <%= link_to [@consumer, message], method: :delete, 
                class: "btn btn-outline-danger btn-sm",
                data: {confirm: "Ви впевнені що хочете видалити запит?"} do %>
                &nbsp<i class="fas fa-times test-delete-message"></i>
              <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
